package {{defaultPackageName}}.config;

import org.springframework.context.annotation.Bean;
import org.springframework.context.annotation.Configuration;
import org.springframework.scheduling.quartz.JobDetailFactoryBean;
import java.util.HashMap;
import java.util.Map;

@Configuration
public class {{txtFileName}} {

  @Bean(name = "{{txtJobName}}")
  public JobDetailFactoryBean jobDetail() {
    JobDetailFactoryBean jobDetailFactoryBean = new JobDetailFactoryBean();
    jobDetailFactoryBean.setJobClass({{txtServiceClass}}.class);

    {{#if chkProperty}}
    // Setting job data map with properties if present
    Map<String, Object> jobDataMap = new HashMap<>();
    jobDataMap.put("{{txtPropertyName}}", "{{txtPropertyValue}}");
    jobDetailFactoryBean.setJobDataAsMap(jobDataMap);
    {{/if}}

    return jobDetailFactoryBean;
  }
}
